#!/bin/bash
#
# Pre-commit hook for Albert plugin
# Runs PHPCS and PHPStan before allowing commits
#

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Get the root directory of the git repository
ROOT_DIR=$(git rev-parse --show-toplevel)
cd "$ROOT_DIR" || exit 1

# Check if composer dependencies are installed
if [ ! -d "vendor" ]; then
    echo -e "${RED}Error: vendor directory not found. Run 'composer install' first.${NC}"
    exit 1
fi

# Get list of staged PHP files
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '\.php$')

if [ -z "$STAGED_FILES" ]; then
    echo -e "${GREEN}No PHP files staged for commit.${NC}"
    exit 0
fi

echo -e "${YELLOW}Running pre-commit checks...${NC}"
echo ""

# Track if any check fails
FAILED=0

# Run PHPCS on staged files
echo -e "${YELLOW}Running PHPCS...${NC}"
./vendor/bin/phpcs --standard=phpcs.xml.dist $STAGED_FILES
PHPCS_EXIT=$?

if [ $PHPCS_EXIT -ne 0 ]; then
    echo -e "${RED}PHPCS found errors. Please fix them before committing.${NC}"
    echo -e "${YELLOW}Tip: Run './vendor/bin/phpcbf' to auto-fix some issues.${NC}"
    FAILED=1
else
    echo -e "${GREEN}PHPCS passed.${NC}"
fi

echo ""

# Run PHPStan on src/ files only (tests are excluded from PHPStan)
SRC_FILES=$(echo "$STAGED_FILES" | grep '^src/')
echo -e "${YELLOW}Running PHPStan...${NC}"
if [ -z "$SRC_FILES" ]; then
    echo -e "${GREEN}No src/ files to analyse, skipping PHPStan.${NC}"
    PHPSTAN_EXIT=0
else
    ./vendor/bin/phpstan analyse --no-progress $SRC_FILES
    PHPSTAN_EXIT=$?
fi

if [ $PHPSTAN_EXIT -ne 0 ]; then
    echo -e "${RED}PHPStan found errors. Please fix them before committing.${NC}"
    FAILED=1
else
    echo -e "${GREEN}PHPStan passed.${NC}"
fi

echo ""

# Final result
if [ $FAILED -eq 1 ]; then
    echo -e "${RED}Pre-commit checks failed. Commit aborted.${NC}"
    echo -e "${YELLOW}To bypass this check (not recommended), use: git commit --no-verify${NC}"
    exit 1
fi

echo -e "${GREEN}All pre-commit checks passed!${NC}"
exit 0
