{
    "name": "extended-abilities/extended-abilities",
    "description": "Extend the abilities of WordPress, WooCommerce and other plugins with the abilities API",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Mark Jansen - Your Mark Media",
            "email": "info@yourmark.nl",
            "homepage": "https://yourmark.nl"
        }
    ],
    "require": {
        "php": ">=8.2",
        "alleyinteractive/wp-block-converter": "^1.7",
        "league/oauth2-server": "^9.3",
        "nyholm/psr7": "^1.8",
        "wordpress/mcp-adapter": "^0.3.0"
    },
    "require-dev": {
        "phpstan/extension-installer": "*",
        "phpstan/phpstan": "*",
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.7",
        "szepeviktor/phpstan-wordpress": "*",
        "wp-coding-standards/wpcs": "^3.0",
        "yoast/phpunit-polyfills": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "ExtendedAbilities\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ExtendedAbilities\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "phpcs": "phpcs src/",
        "phpcbf": "phpcbf src/",
        "phpstan": "phpstan analyse",
        "test": "phpunit --configuration phpunit-unit.xml.dist",
        "test:unit": "phpunit --configuration phpunit-unit.xml.dist",
        "test:integration": "phpunit --configuration phpunit.xml.dist",
        "lint": "find src/ tests/ -name '*.php' -exec php -l {} \\;"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "alleyinteractive/composer-wordpress-autoloader": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpstan/extension-installer": true
        }
    }
}
